# ViperSSH Configuration
# Copy this file to hosts.yaml and edit with your environments
#
# Format:
#   environments:
#     Environment_Name:
#       suffix: .domain.suffix   # appended to short hostnames
#       hosts:
#         - hostname1            # simple string format
#         - hostname2
#         - alias: actual.hostname.com   # alias format for long hostnames

environments:
  Dev:
    suffix: .dev.example.local
    hosts:
      - bastion1
      - appserver1
      - appserver2
      - database1

  Test:
    suffix: .test.example.local
    hosts:
      - testserver1
      - testserver2

  Prod:
    suffix: .prod.example.local
    hosts:
      - prodserver1
      - prodserver2
      # FQDNs (with dots) are used as-is:
      # - special.other.domain.com
      # user@host format also works:
      # - admin@jumpbox.example.com
      # Alias format for long hostnames (displays "prod-bastion", connects to the ELB):
      # - prod-bastion: PROD-BASTION-EXT-NLB-abc123.elb.us-east-1.amazonaws.com
